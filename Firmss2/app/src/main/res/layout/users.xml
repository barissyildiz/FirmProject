<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/querylayout_header"
        android:padding="50dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PERSONAL QUERY PAGE"
            android:textColor="@android:color/white"
            android:textSize="25sp"/>

    </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="60dp"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="60dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/usericon"
            android:layout_marginRight="20dp"/>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:errorEnabled="true"
            app:counterEnabled="true"
            app:counterMaxLength="15"
            android:textColorHint="@android:color/holo_blue_dark">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/users"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="KULLANICI ADI"
                android:ems="10"
                android:inputType="text"/>

        </android.support.design.widget.TextInputLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="60dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/userpasswordicon"
            android:layout_marginRight="20dp"/>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:errorEnabled="true"
            app:counterEnabled="true"
            app:counterMaxLength="15"
            android:textColorHint="@android:color/holo_blue_dark"
            app:passwordToggleEnabled="true">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="ŞİFRE"
                android:ems="10"
                android:inputType="textPassword"/>

        </android.support.design.widget.TextInputLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <CheckBox
            android:id="@+id/remember"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BENİ HATIRLA"
            android:layout_alignParentLeft="true"
            android:textSize="16sp"
            android:textColor="@android:color/holo_blue_dark"></CheckBox>

        <TextView
            android:id="@+id/save_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PROĞRAMA KAYIT OL"
            android:textColor="@android:color/holo_blue_dark"
            android:textSize="12sp"
            android:layout_marginLeft="80dp"
            android:layout_toRightOf="@+id/remember"/>

        <TextView
            android:id="@+id/forget_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PAROLANIZI HATIRLAMIYOR MUSUNUZ"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/save_user"
            android:textSize="12sp"
            android:textColor="@android:color/holo_blue_dark"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal">

        <Button
            android:id="@+id/btn_users_enter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="GİRİŞ"
            android:textColor="@android:color/white"
            android:background="@android:color/holo_blue_dark"
            android:layout_marginRight="20dp"/>

        <Button
            android:id="@+id/btn_users_clear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TEMİZLE"
            android:textColor="@android:color/white"
            android:background="@android:color/holo_blue_dark"/>

    </LinearLayout>

</LinearLayout>