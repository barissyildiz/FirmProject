<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp">

    <ImageView
        android:id="@+id/image_customlist_task2_firms"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/firms"/>

    <TextView
        android:id="@+id/textview_customlist_task2_firmname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FİRMA"
        android:textSize="20sp"
        android:textColor="@android:color/white"
        android:layout_toRightOf="@+id/image_customlist_task2_firms"/>

    <ImageView
        android:id="@+id/image_plus_or_minus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/textview_customlist_task2_money"/>

    <TextView
        android:id="@+id/textview_customlist_task2_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BORÇ"
        android:textSize="20sp"
        android:textColor="@android:color/white"
        android:layout_alignParentRight="true"/>

</RelativeLayout>